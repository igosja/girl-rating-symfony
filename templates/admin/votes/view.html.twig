{% extends 'admin/base.html.twig' %}

{% block title %}{{ vote.id }}{% endblock %}

{% block body %}
    <h1 class="text-center">#{{ vote.id }}</h1>
    <ul class="list-inline text-center">
        <li class="list-inline-item">
            <a class="btn btn-default" href="{{ path('admin_votes') }}">List</a>
        </li>
    </ul>
    <div class="row">
        <table class="table table-striped table-bordered detail-view">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ vote.id }}</td>
            </tr>
            <tr>
                <th>Girl One</th>
                <td>{{ vote.girlOne.name }}</td>
            </tr>
            <tr>
                <th>Girl Two</th>
                <td>{{ vote.girlTwo.name }}</td>
            </tr>
            <tr>
                <th>Girl Winner</th>
                <td>{{ vote.girlWinner ? vote.girlWinner.name }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ vote.createdAt|date }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ vote.updatedAt|date }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
